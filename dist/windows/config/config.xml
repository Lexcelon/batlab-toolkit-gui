<?xml version="1.0" encoding="UTF-8"?>
<Installer>
  <Name>Batlab Toolkit GUI</Name>
  
  <!-- Please leave the below variable as 0.0.0
       For local dev builds, the version will just be 0.0.0
       For official builds on the build server, this gets replaced with the build number
  -->
  <Version>0.0.0</Version>
  
  <Title>Batlab Toolkit GUI Installer</Title>
  <Publisher>Lexcelon LLC</Publisher>
  <StartMenuDir>Lexcelon</StartMenuDir>
  <TargetDir>@ApplicationsDir@/Lexcelon/Batlab Toolkit GUI</TargetDir>
  <RunProgram>@TargetDir@/Batlab.exe</RunProgram>
  <RunProgramDescription>Run Batlab Toolkit GUI</RunProgramDescription>
  <RemoteRepositories>
    <Repository>
      <Url>https://lexcelon.github.io/batlab-toolkit-gui/windows</Url>
      <Enabled>1</Enabled>
      <DisplayName>Updates Repository (GitHub)</DisplayName>
    </Repository>
  </RemoteRepositories>
</Installer>
